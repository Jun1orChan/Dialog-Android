<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialoglib_bg_white_radius_2"
    android:orientation="vertical"
    android:padding="@dimen/dialoglib_padding">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/dialoglib_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.nd.widget.progress.HorizentalProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialoglib_progressbar_height"
        android:padding="@dimen/dialoglib_textPadding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLeftMsg"
            style="@style/dialoglib_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:minHeight="0dp"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <TextView
            android:id="@+id/tvRightMsg"
            style="@style/dialoglib_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:minHeight="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCancel"
        style="@style/dialoglib_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/dialoglib_bg_selector"
        android:clickable="true"
        android:text="@string/dialoglib_cancel" />
</LinearLayout>